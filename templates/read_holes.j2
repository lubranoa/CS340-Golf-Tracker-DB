<head>
    <title>Golf Tracker</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="//cdn.muicss.com/mui-0.10.3/css/mui.min.css" rel="stylesheet" type="text/css" />
    <script src="//cdn.muicss.com/mui-0.10.3/js/mui.min.js"></script>
    <link href="./../static/css/all-templates.css" rel="stylesheet" />
</head>
<body>
{% include './nav_bar.j2' %}
<div class="app">
    <h1>The holes Table</h1>
    <h2>Please test our application in Mozilla Firefox</h2>
    {#  
        Citation for the table style
        Date: 07/18/2022
        Copied from: MUI CSS/JS
        Source URL: https://www.muicss.com/docs/v1/css-js/buttons 
    #}    <table class="mui-table mui-table--bordered">
    <thead>
        <tr>
            {# Get key names and insert as table header column names #}
            {% if gt_holes[0]|length > 0 %}
            {% for key in gt_holes[0].keys() %}
            <th>{{ key }}</th>
            {% endfor %}
            {% else %}
            <p>This table is empty.</p>
            <p> Please use button below to insert data.</p>
            {% endif %}
        </tr>
    <tbody>
        {# Get and display all holes data in the table rows #}
        {% for hole in gt_holes %}
        <tr>
            {% for key in hole.keys() %}
            <td class="table-data">{{ hole[key] }}</td>
            {% endfor %}
        </tr>
        {% endfor %}
        <tr>
            <td colspan="10">
            <div>
                <a href="/insert-hole">
                    {#  
                        Citation for the button style
                        Date: 07/27/2022
                        Adapted from: MUI CSS/JS
                        Source URL: https://www.muicss.com/docs/v1/css-js/buttons 
                    #}
                    <button class="mui-btn mui-btn--small mui-btn--primary mui-btn--fab">+</button>
                </a>
            </div>
            </td>
        </tr>
    </table>
    {#<!-- Insert a hole into the db -->
    <form>
        <fieldset>
            <legend>Insert hole</legend>
            <label>hole Number:</label>
                <select>
                    <option>--Choose hole number--</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                    <option>10</option>
                    <option>11</option>
                    <option>12</option>
                    <option>13</option>
                    <option>14</option>
                    <option>15</option>
                    <option>16</option>
                    <option>17</option>
                    <option>18</option>
                </select>
            <label>course</label>
                <select>
                    <option>--Choose course--</option>
                    <option>Augusta National Golf Club</option>
                    <option>Bluejack National Golf Club</option>
                    <option>Nanea Golf Club</option>
                    <option>Pebble Beach</option>
                </select>
            <label>hole Par:</label>
                <select>
                    <option>--Choose par--</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            <label>hole Distance (yd):</label>
                <input type="number">
            <button>Submit hole Insert</button>
        </fieldset>
    </form>
    <br>#}
    <div class="home-link"><a href="/">Go Back to Homepage</a></div>
</div>
</body>
</html>