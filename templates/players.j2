<body>
    <h1>The players Table</h1>
    <table class="mui-table mui-table--bordered">
    <thead>
        <tr>
            <!-- Get key names and insert as table header column names -->
            {% for key in gt_players[0].keys() %}
            <th>{{ key }}</th>
            {% endfor %}
        </tr>
    <tbody>
        <!-- Get and display all players data in the table rows -->
        {% for player in gt_players %}
        <tr>
            {% for key in player.keys() %}
            <td>{{ player[key] }}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </table>
    <form>
        <fieldset>
            <legend>Insert player</legend>
            <label>player Name:</label>
